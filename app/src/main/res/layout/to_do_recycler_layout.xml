<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/car_layout"
    android:longClickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_card"
        cardview:cardCornerRadius="2dp"
        cardview:cardElevation="3dp"
        cardview:cardUseCompatPadding="true"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginStart="8dp"
        cardview:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        cardview:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/to_do_inner_layout"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/recycle_card"
            android:layout_alignEnd="@+id/recycle_card">

            <TextView
                android:id="@+id/to_do_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#eee"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="example"
                cardview:layout_constraintRight_toLeftOf="@+id/checkBox"
                android:layout_marginTop="4dp"
                cardview:layout_constraintTop_toTopOf="parent"
                cardview:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                cardview:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="4dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:checked="false"
                android:layout_marginEnd="4dp"
                cardview:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                cardview:layout_constraintTop_toTopOf="parent"
                cardview:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="4dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>